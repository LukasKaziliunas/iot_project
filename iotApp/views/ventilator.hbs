<script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
<h1>{{ title }}</h1>

<div id="ventState">

</div>

<div id="temp">

</div>

<br>
<button type="button" id="btnON">On</button><br>
<button type="button" id="btnOFF">Off</button><br>

<script>
    $(document).ready(function () {
        // GET STUFF FROM SERVER ****************
        getState();
        getTemp();

        function getState() {
            $.ajax({
                type: 'GET',
                dataType: "json",
                url: 'http://192.168.1.15:85/?vent',
                success: function (resp) {
                    var state = resp.state;
                    changeState(state);
                },
                error: function (request, status, error) {
                    alert(error);
                }
            });
        }

        function getTemp() {
            $.ajax({
                type: 'GET',
                dataType: "json",
                url: 'http://192.168.1.15:85/?temp',
                success: function (resp) {
                    html = "<p> temperature is : " + resp.temp + " </p>"
                    $('#temp').html(html);
                },
                error: function (request, status, error) {
                    alert(error);
                }
            });
        }

        // *****************************************************

        $('#btnON').on('click', function () {
            TurnOn()
        })

        $('#btnOFF').on('click', function () {
            TurnOff()
        })


        function TurnOn() {

            var data = {
                vent: 1
            };

            $.ajax({
                type: 'POST',
                dataType: "text",
                url: 'http://192.168.1.15:85',
                data: JSON.stringify(data),
                success: function (resp) {
                    changeState(1);
                },
                error: function (request, status, error) {
                    alert(error);
                }
            });
        }

        function TurnOff() {
            var data = {
                vent: 0
            };

            $.ajax({
                type: 'POST',
                dataType: "text",
                url: 'http://192.168.1.15:85',
                data: JSON.stringify(data),
                success: function (resp) {
                    changeState(0);
                },
                error: function (request, status, error) {
                    alert(error);
                }
            });

        }

        function changeState(state) {
            if (state == 1) {
                var html = "<p> ventilator is on </p>"
            } else {
                var html = "<p> ventilator is off </p>"
            }
            $('#ventState').html(html);
        }


    });

</script>